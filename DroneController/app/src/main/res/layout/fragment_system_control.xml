<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

  <Button
      android:id="@+id/sshDisconnectButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="14pt"
      android:paddingStart="@dimen/system_state_groups_margin_bot"
      android:paddingEnd="@dimen/system_state_groups_margin_bot"
      android:backgroundTint="@color/colorNegative"
      android:paddingLeft="@dimen/button_side_margin"
      android:paddingRight="@dimen/button_side_margin"
      android:text="@string/disconnect"
      android:textColor="@color/colorPrimaryLight" />

  <Button
      android:id="@+id/shutdownButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/colorNegative"
      android:enabled="true"
      android:paddingStart="@dimen/system_state_groups_margin_bot"
      android:paddingEnd="@dimen/system_state_groups_margin_bot"
      android:text="@string/shutdown"
      android:textColor="@color/colorPrimaryLight" />

</LinearLayout>